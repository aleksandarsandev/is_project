@model EShopAdminApplication_2.Models.Restaurant

@{
    ViewData["Title"] = "Restaurant Details";
}

<h1>@Model.Name</h1>
<p>Location: @Model.Location</p>

<h2>Food Items</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Weight</th>
            <th>Price</th>
            <th>Actions</th> <!-- Added Actions column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var foodItem in Model.FoodItems)
        {
            <tr>
                <td>@foodItem.Name</td>
                <td>@foodItem.Weight grams</td>
                <td>@foodItem.Price den</td>
                <td>
                    <!-- Edit Button -->
                    <a asp-controller="FoodItem" asp-action="Edit" asp-route-id="@foodItem.Id" class="btn btn-primary btn-sm">Edit</a>

                    <!-- Details Button -->
                    <a asp-controller="FoodItem" asp-action="Details" asp-route-id="@foodItem.Id" class="btn btn-info btn-sm">Details</a>

                    <!-- Delete Button -->
                    <a asp-controller="FoodItem" asp-action="Delete" asp-route-restaurantId="@Model.Id" asp-route-foodItemId="@foodItem.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<!-- Button to navigate to Add Food Item page -->
<a asp-action="AddFoodItem" asp-route-restaurantId="@Model.Id" class="btn btn-primary">Add Food Item</a>

<!-- Button to navigate back to the list of restaurants -->
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
