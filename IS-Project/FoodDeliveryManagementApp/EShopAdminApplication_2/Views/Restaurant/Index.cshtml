@model List<EShopAdminApplication_2.Models.Restaurant> 

@{
    ViewData["Title"] = "Restaurant List";
}

<h1>Restaurant List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model)
        {
            <tr>
                <td>@restaurant.Name</td>
                <td>@restaurant.Location</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@restaurant.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@restaurant.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@restaurant.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
